<%- include('../partials/header') %>

<div class="row col-9 mx-auto mt-5">
    <div class="col-6 offset-3">
        <h1 class="text-center text-secondary">Login</h1>
        <form action="/user/login" method="POST" class="validated-form" novalidate>

            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" class="form-control" name="username" id="username" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" name="password" id="password" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn col-2 btn-success">Login</button>
            </div>
        </form>

        <div>
            <p class="text-secondary">Don't have any account? <a href="/user/register" class="link-primary">Register</a></p>
        </div>

        <div class="mt-5">
            <a href="/user/auth/google" class="btn btn-lg col-8 p-2 offset-2 d-flex justify-content-evenly align-items-baseline rounded-pill btn-social btn-google">
                <i class="fab fa-google"></i>
                <span>Login with Google</span>
            </a>
        </div>

        <div class="mt-3">
            <a href="/user/auth/facebook" class="btn btn-lg col-8 p-2 offset-2 d-flex justify-content-evenly align-items-baseline rounded-pill btn-social btn-facebook">
                <i class="fab fa-facebook"></i>
                <span>Login with Facebook</span>
            </a>
        </div>

    </div>
</div>
    

    

    <%- include('../partials/footer') %>


        